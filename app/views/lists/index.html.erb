<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Movie Lists</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
      <div><%= link_to list.name, list_path(list) %></div>
      <%= link_to "delete", lists_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove from your list"}, class: 'text-danger' %>
    </div>
    <% end %>
  </div>
  <%= link_to 'Create a new list', new_list_path, class: 'btn btn-primary' %>
</div>
