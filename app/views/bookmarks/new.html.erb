<div class="container">
<h1>Add a movie</h1>
<%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: false %>
    <%= f.input :comment %>
    <%= f.submit 'Add movie', class: 'btn btn-primary' %>
  <% end %>
</div>
